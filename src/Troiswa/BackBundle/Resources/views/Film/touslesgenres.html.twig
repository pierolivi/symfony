{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block title %}
    acteur {{ parent() }}
{% endblock %}

{% block central %}
        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Tous les genres
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin") }}">Admin</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i><a href="{{ path("troiswa_back_admin_acteur") }}"> Tous les acteurs</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i><a href="{{ path("troiswa_back_create_genre") }}"> Creer nouveau genre</a>
                            </li>

                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-6">
                        <h2>Film's genre</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>genre</th>
                                        <th>description</th>
                                        <th>Action</th>


                            {% for message in app.session.flashbag.get("success_genre") %}
                            <p class="alert alert-success">{{ message }}</p>
                            {% endfor %}

                                    </tr>
                                </thead>
                                <tbody>
                                {#{ dump(genre) }#}
                                {% for value in genre %}
                                    <tr>
                                        <td>{{ value.id }}</td>
                                        <td>{{ value.type }}</td>
                                        <td>{{ value.description}}</td>
                                       <td> <a href="{{ path("troiswa_back_modifier_genre", {'id' : value.id} ) }}" class="btn btn-success">modifier</a>
                                        <a href="{{ path("troiswa_back_supprimer_genre", {'id' : value.id} ) }}" class="btn btn-success">supprimer</a></td>



                                    </tr>


                                </tbody>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                    </div>



                <!-- /.row -->


                    <div class="col-lg-6">
                        <h2>Bootstrap Docs</h2>
                        <p>For complete documentation, please visit <a target="_blank" href="http://getbootstrap.com/css/#tables">Bootstrap's Tables Documentation</a>.</p>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->
{% endblock %}