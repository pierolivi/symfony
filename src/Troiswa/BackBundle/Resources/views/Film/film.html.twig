{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block title %}
    acteur {{ parent() }}
{% endblock %}

{% block central %}



        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Tous les acteurs
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i> Tables
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                {#{ dump(film) }#}
                <div class="row">
                    <div class="col-lg-6">
                        <h2>Actor's Table</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>titre</th>
                                        <th>description</th>
                                        <th>date de realisation</th>
                                        <th>genre</th>
                                         <th>note</th>
                                         <th>image</th>
                                    </tr>
                                    <td>{{  film.id }}</td>
                                    <td>{{  film.titre }}</td>
                                  <td> {{ film.description }}</td>
                                   <td> {{ film.datederealisation|date("y/m/d") }}</td>
                                   <td>{{ film.liaisonGenre.type }}</td>
                                   <td> {{ film.note }}</td>
                            <td><img src="{{ asset(film.displayImageFilms) }}" width="200px"  class="img-thumbnail"></td>
                                </thead>
                                <tbody>

                            </table>
                        </div>
                    </div>

                    </div>



                <!-- /.row -->


                    <div class="col-lg-6">
                        <h2>Bootstrap Docs</h2>
                        <p>For complete documentation, please visit <a target="_blank" href="http://getbootstrap.com/css/#tables">Bootstrap's Tables Documentation</a>.</p>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->
{% endblock %}