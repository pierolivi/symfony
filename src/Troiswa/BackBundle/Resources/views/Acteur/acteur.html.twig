{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block title %}
    acteur {{ parent() }}
{% endblock %}

{% block central %}



        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {{ acteur2.prenom|capitalize }}
                            {{ acteur2.nom|capitalize}}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i> Tables
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                {#{ dump(acteur2) }#}
                <div class="row">
                    <div class="col-lg-6">
                        <h2>Actor's Table</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                       <th>ID</th>
                                        <th>Prenom</th>
                                        <th>nom</th>
                                    <th>date de naissance</th>
                                        <th>sexe</th>
                                        <th>biographie</th>
                                        <th>ville</th>
                                         <th>image</th>
                                        <!--<th>actions</th>-->
                                    </tr>

                                </thead>
                                <tr>
                                        <td>{{ acteur2.id }}</td>
                                        <td>{{ acteur2.prenom|capitalize }}</td>
                                        <td>{{ acteur2.nom|capitalize}}</td>
                                        <td>{{ acteur2.datenaissance|date("y/m/d")}}</td>
                                        {% if acteur2.sexe == 1 %}
                                            <td>homme</td>
                                        {% elseif acteur2.sexe == 0 %}
                                            <td>femme</td>
                                        {% endif %}
                                        <td>{{ acteur2.biographie }}</td>
                                        <td>{{ acteur2.ville }}</td>

                                        <td><img src="{{ asset(acteur2.displayImageActeurs) }}" width="200px"  class="img-thumbnail"></td>
                                        <td>
                                            <!--<a href="#" class="btn btn-success">voir</a>
                                            <a href="#" class="btn btn-info">modif</a>
                                            <a href="#" class="btn btn-danger">supp</a>-->
                                        </td>

                                    </tr>
                                <tbody>

                            </table>
                            <h3>Liste des films</h3>
                            <ul>
                            {% for film in acteur2.liaisonFilms %}
                                   <li> {{ film.titre }}</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>

                    </div>



                <!-- /.row -->


                    <div class="col-lg-6">
                        <h2>Bootstrap Docs</h2>
                        <p>For complete documentation, please visit <a target="_blank" href="http://getbootstrap.com/css/#tables">Bootstrap's Tables Documentation</a>.</p>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->
{% endblock %}